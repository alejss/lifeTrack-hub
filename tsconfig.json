{
  "compilerOptions": {
   "target": "ES2017",
   "module": "CommonJS",
   "allowJs": false,
   "strict": true,
   "moduleResolution": "Node",
   "baseUrl": "./src",
   "forceConsistentCasingInFileNames": true,
   "resolveJsonModule": true,
   "sourceMap": true,
   "allowSyntheticDefaultImports": true,
   "outDir": "dist"
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"],
}
